<h1>Edit story</h1>
<div class="row">
  <form action="/stories" method="post" class="col s12">
    {{!-- Title --}}
    <div class="row">
      <div class="input-field">
        <input type="text" name="title" value="{{story.title}}">
        <label for="title">Title</label>
      </div>
    </div>
    {{!-- Status --}}
    <div class="row">
      <div class="input-field">
        <select name="status">
          {{#select story.status}}
          <option value="public" selected>Public</option>
          <option value="private">Private</option>
          <option value="unpublished">Unpublished</option>
          {{/select}}
        </select>
        <label for="status">Status</label>
      </div>
    </div>

    <div class="row">
      <p>
        <input type="checkbox" name="allowComments" class="filled-in" id="filled-in-box" {{#if story.allowComments}}
          checked="checked" {{/if}}>
        <label for="filled-in-box">Allow Comments</label>
      </p>
    </div>
    {{!-- Comment area --}}
    <div class="row">
      <div class="input-field">
        <h5>Tell us your Story:</h5>
        <textarea name="body">{{story.body}}</textarea>
      </div>
    </div>

    {{!-- Submit --}}
    <input type="submit" value="Save" class="btn">
  </form>
</div>